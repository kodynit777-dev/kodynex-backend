{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "module": "commonjs",
    "moduleResolution": "node",

    "declaration": false,
    "emitDeclarationOnly": false,
    "noEmit": false,

    "sourceMap": true,
    "removeComments": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
