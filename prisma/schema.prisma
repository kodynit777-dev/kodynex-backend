}

model Product {
  id           String     @id @default(cuid())
  name         String
  price        Float
  description  String?
  image        String?
  
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])

  createdAt    DateTime   @default(now())
}
