// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  phoneE164       String   @unique
  name            String?
  email           String?  @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  phoneVerifiedAt DateTime?
}
